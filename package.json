{
  "name": "pesel-tools",
  "version": "0.12.2",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "serve:ssr:pesel-tools": "node dist/pesel-tools/server/server.mjs",
    "lint": "ng lint",
    "release": "standard-version",
    "storybook": "ng run pesel-tools:storybook",
    "build-storybook": "ng run pesel-tools:build-storybook"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^20.1.3",
    "@angular/common": "^20.1.3",
    "@angular/compiler": "^20.1.3",
    "@angular/core": "^20.1.3",
    "@angular/forms": "^20.1.3",
    "@angular/platform-browser": "^20.1.3",
    "@angular/platform-browser-dynamic": "^20.1.3",
    "@angular/platform-server": "^20.1.3",
    "@angular/router": "^20.1.3",
    "@angular/service-worker": "^20.1.3",
    "@angular/ssr": "^20.1.3",
    "@eslint/js": "^9.32.0",
    "cookie-parser": "^1.4.7",
    "express": "^4.18.2",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "~0.15.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^20.1.3",
